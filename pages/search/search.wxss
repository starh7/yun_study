.searchContainer {
    padding: 0 20rpx;
}

/* 头部 */
.header {
    display: flex;
    height: 60rpx;
    line-height: 60rpx;
    padding: 10rpx 0;
}

.searchIpt {
    position: relative;
    flex: 1;
    background: rgba(237, 237, 237, 0.3);
    border-radius: 30rpx;
}
.searchIpt .clear{
    position: absolute;
    right: 0;
    margin-right: 20rpx;
    z-index: 22;
}
.placeholder {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;

}

.cancle {
    width: 100rpx;
    text-align: center;
}

.searchIcon {
    position: absolute;
    left: 20rpx;
}

.searchIpt input {
    line-height: 60rpx;
    margin-left: 50rpx;
    height: 60rpx
}

/* 搜索内容展示 */
.searchDisplay {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 24rpx;
    border-bottom: 1rpx solid #333;
}

.searchDisplay .searchItem {
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
}

.searchDisplay .content{
    flex: 1;
    margin-left: 20rpx;
    border-bottom: 1rpx solid #eee;
    font-size: 26rpx;
}

/* 列表部分 */

.listContainer {
    margin-top: 30rpx;
}

.listContainer .header {
    font-size: 28rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #eee;
}

.listContainer .searchLish {
    display: flex;
    flex-wrap: wrap;
}

.listContainer .searchItem {
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
}

.listContainer .searchItem .order {
    margin: 0 10rpx;
}

.listContainer .searchItem .iconImg {
    width: 35rpx;
    height: 20rpx;
    margin-left: 10rpx;
}

/* 历史搜索 */
.history {
    position: relative;
    display: flex;
    flex-wrap: wrap;
    line-height:  50rpx;
    margin: 20rpx 0;
  }
.history .title {
    font-size: 28rpx;
    height: 50rpx;
  
  }
  
  .history .historyItem {
    height: 50rpx;
    font-size: 26rpx;
    background: #ededed;
    margin-left: 20rpx;
    padding: 0 30rpx;
    border-radius: 20rpx;
    margin-bottom: 20rpx;
  }
  .history .delete {
    position: absolute;
    bottom: 10rpx;
    right: 15rpx;
    font-size: 36rpx;
  }
